<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="brdrPane" minHeight="500.0" minWidth="800.0" stylesheets="@style.css" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="cr.ac.una.cineuna.controller.PrincipalViewController">
   <center>
      <VBox minHeight="400.0" minWidth="400.0" styleClass="VBoxContainer" BorderPane.alignment="CENTER" />
   </center>
   <left>
      <VBox alignment="CENTER" spacing="20.0" styleClass="VBoxContainer" BorderPane.alignment="CENTER">
         <children>
            <JFXButton fx:id="btnUsuarios" onAction="#OnActionbtnUsuarios" text="%usuarioTxt" />
            <JFXButton fx:id="btnPeliculas" onAction="#OnActionbtnPeliculas" text="%pel" />
            <JFXButton fx:id="btnSalas" onAction="#OnActionbtnSalas" text="%salas" />
            <JFXButton fx:id="btnComidas" layoutX="10.0" layoutY="260.0" minHeight="80.0" minWidth="200.0" onAction="#OnActionBtnComidas" text="%comidas" />
            <JFXButton fx:id="btnCerrar" minHeight="80.0" minWidth="200.0" onAction="#OnActionbtnCerrar" text="%cerrarSes" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
   </left>
   <top>
      <VBox alignment="CENTER" spacing="10.0" BorderPane.alignment="CENTER">
         <children>
            <Label styleClass="h1-contraste" text="%bienvenido" />
            <Label styleClass="h2-contraste" text="%adminTitulo" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
   </top>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</BorderPane>
